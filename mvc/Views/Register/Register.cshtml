@model DTOs.RegisterRequest

<h2>Rejestracja</h2>

@if (ViewBag.Error != null)
{
    <div style="color:red">@ViewBag.Error</div>
}

<form method="post" asp-action="Register" asp-controller="Register">
    <label>Login:</label><br />
    <input asp-for="Login" />
    <span asp-validation-for="Login" class="text-danger"></span><br /><br />

    <label>Has≈Ço:</label><br />
    <input asp-for="Password" type="password" />
    <span asp-validation-for="Password" class="text-danger"></span><br /><br />

    <button type="submit">Zarejestruj</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
